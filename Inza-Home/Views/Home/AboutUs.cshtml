@{
    ViewData["Title"] = "Hakkımızda - INZA HOME";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- STORY SECTION (Ana sayfa stilinde) -->
<section class="py-5" style="background: white; margin-top:60px">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <div class="pe-lg-5 fade-in-up">
                    <h2 class="display-6 fw-normal text-brown mb-4" style="font-family: 'Playfair Display', serif;">
                        INZA HOME
                        <span class="fw-light d-block" style="font-size: 0.8em; color: var(--text-muted);">@HelperFunctions.Translate("Hikayemiz")</span>
                    </h2>
                    <p class="lead text-muted mb-4" style="font-size: 1.1rem; line-height: 1.8;">
                        @HelperFunctions.Translate("1998 yılında Bursa'da üretime başladığımızdan bu yana, modern tasarımın zarafetini ve konforun sıcaklığını bir araya getirerek yaşam alanlarınıza değer katıyoruz.")
                    </p>
                    <p class="text-muted mb-4" style="line-height: 1.7;">
                        @HelperFunctions.Translate("Yenilikçi yaklaşımımızla evlerinizi sadece bir yaşam alanı değil, huzurun ve estetiğin buluştuğu özel mekanlar haline getiriyoruz. Her ürünümüzde kalite, konfor ve estetik bir araya gelir.")
                    </p>
                    <p class="text-muted" style="line-height: 1.7;">
                        @HelperFunctions.Translate("25 yılı aşkın tecrübemizle, binlerce mutlu müşterinin yaşam alanlarına dokunduk ve her gün daha iyisini yapmak için çalışmaya devam ediyoruz.")
                    </p>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1 mb-5 mb-lg-0">
                <div class="fade-in-up" style="animation-delay: 0.2s;">
                    <div class="position-relative">
                        <img src="~/images/Koltuklar/Sude.png" alt="INZA HOME Atölye"
                             class="img-fluid rounded-4" style="box-shadow: 0 20px 60px rgba(0,0,0,0.1);">
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MISSION & VISION SECTION (Modern grid layout) -->
<section class="py-5" style="background: white;">
    <div class="container py-5">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <div class="fade-in-up">
                    <h2 class="display-6 fw-normal text-brown mb-3" style="font-family: 'Playfair Display', serif;">
                        @HelperFunctions.Translate("Misyon & Vizyon")
                    </h2>
                    <p class="text-muted lead">
                        @HelperFunctions.Translate("Geleceğe dönük hedeflerimiz ve değerlerimiz")
                    </p>
                </div>
            </div>
        </div>

        <div class="row g-5">
            <div class="col-lg-6">
                <div class="fade-in-up h-100">
                    <div class="bg-light rounded-4 p-5 h-100" style="background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);">
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-brown rounded-3 p-3 me-3" style="background: var(--brown);">
                                <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                            </div>
                            <h3 class="h4 fw-semibold text-brown mb-0">@HelperFunctions.Translate("Misyonumuz")</h3>
                        </div>
                        <p class="text-muted mb-0" style="line-height: 1.7; font-size: 1.05rem;">
                            @HelperFunctions.Translate("Kaliteli ve modern mobilyalarla yaşam alanlarını güzelleştirmek, müşteri memnuniyetini her şeyin üzerinde tutarak her eve konfor ve zarafet getirmek.")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="fade-in-up h-100" style="animation-delay: 0.2s;">
                    <div class="bg-light rounded-4 p-5 h-100" style="background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);">
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-brown rounded-3 p-3 me-3" style="background: var(--brown);">
                                <svg width="24" height="24" fill="white" viewBox="0 0 24 24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                                </svg>
                            </div>
                            <h3 class="h4 fw-semibold text-brown mb-0">@HelperFunctions.Translate("Vizyonumuz")</h3>
                        </div>
                        <p class="text-muted mb-0" style="line-height: 1.7; font-size: 1.05rem;">
                            @HelperFunctions.Translate("Global ölçekte tanınan bir marka olmak ve her eve INZA HOME kalitesini ulaştırarak, dünya çapında konfor ve estetiğin öncüsü olmak.")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- VALUES SECTION (Yeni eklenen bölüm) -->
<section class="py-5" style="background: linear-gradient(135deg, var(--brown), #5a4a3d);">
    <div class="container py-5">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <div class="fade-in-up">
                    <h2 class="display-6 fw-normal text-white mb-3" style="font-family: 'Playfair Display', serif;">
                        @HelperFunctions.Translate("Değerlerimiz")
                    </h2>
                    <p class="text-white-50 lead">
                        @HelperFunctions.Translate("INZA HOME'u özel kılan temel değerler")
                    </p>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Kalite -->
            <div class="col-md-4">
                <div class="fade-in-up text-center h-100">
                    <div class="bg-white bg-opacity-10 rounded-4 p-5 h-100 shadow-sm hover-shadow-lg">
                        <div class="icon-circle mb-4">
                            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9 12l2 2 4-4"></path>
                                <circle cx="12" cy="12" r="9"></circle>
                            </svg>
                        </div>
                        <h4 class="fw-semibold text-white mb-3">@HelperFunctions.Translate("Kalite")</h4>
                        <p class="text-white-50 mb-0">
                            @HelperFunctions.Translate("En yüksek standartlarda üretim ve malzeme kalitesi")
                        </p>
                    </div>
                </div>
            </div>

            <!-- Konfor -->
            <div class="col-md-4">
                <div class="fade-in-up text-center h-100" style="animation-delay: 0.1s;">
                    <div class="bg-white bg-opacity-10 rounded-4 p-5 h-100 shadow-sm hover-shadow-lg">
                        <div class="icon-circle mb-4">
                            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4.5 6a4.5 4.5 0 0 0 0 9l7.5 7.5 7.5-7.5a4.5 4.5 0 0 0-7.5-6L12 7l-1-1a4.5 4.5 0 0 0-6.5 0z"></path>
                            </svg>
                        </div>
                        <h4 class="fw-semibold text-white mb-3">@HelperFunctions.Translate("Konfor")</h4>
                        <p class="text-white-50 mb-0">
                            @HelperFunctions.Translate("Ergonomik tasarım ve maksimum rahatlık odaklı yaklaşım")
                        </p>
                    </div>
                </div>
            </div>

            <!-- Güven -->
            <div class="col-md-4">
                <div class="fade-in-up text-center h-100" style="animation-delay: 0.2s;">
                    <div class="bg-white bg-opacity-10 rounded-4 p-5 h-100 shadow-sm hover-shadow-lg">
                        <div class="icon-circle mb-4">
                            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 22c4.97 0 9-3.58 9-8V7l-9-4-9 4v7c0 4.42 4.03 8 9 8z"></path>
                            </svg>
                        </div>
                        <h4 class="fw-semibold text-white mb-3">@HelperFunctions.Translate("Güven")</h4>
                        <p class="text-white-50 mb-0">
                            @HelperFunctions.Translate("Müşteri memnuniyeti ve uzun vadeli güven ilişkileri")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Fade-in animation (ana sayfadaki ile aynı)
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        // Initialize fade-in elements
        document.querySelectorAll('.fade-in-up').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.8s ease';
            observer.observe(el);
        });

        // Staggered animation delays
        document.querySelectorAll('.fade-in-up').forEach((el, index) => {
            if (!el.style.animationDelay) {
                el.style.transitionDelay = `${index * 0.1}s`;
            }
        });
    </script>
    }