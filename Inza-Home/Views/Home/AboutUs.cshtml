@{
    ViewData["Title"] = "Hakkımızda - INZA HOME";
    Layout = "_Layout";
}
<!-- HERO SECTION (Projenizin hero stilinde) -->
<section class="hero-wrap d-flex align-items-center justify-content-center" style="height: 60vh; background: linear-gradient(194deg, rgb(255 255 255 / 90%), rgba(74, 59, 49, 0.7)), url(~/images/Koltuklar/Beren.png) center ;">
    <div class="container text-center">
        <div class="fade-in-up">
            <h1 class="display-4 fw-normal text-white mb-4" style="font-family: 'Playfair Display', serif;">
                <span class="fw-light">Hakkımızda</span>
            </h1>
            <p class="lead text-white-50 mb-0" style="max-width: 600px; margin: 0 auto; line-height: 1.6;">
                1998'den bu yana zarafeti ve konforu yaşam alanlarınıza taşıyoruz.
            </p>
        </div>
    </div>
</section>

<!-- STORY SECTION (Ana sayfa stilinde) -->
