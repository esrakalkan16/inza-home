                <div class="fade-in-up" style="animation-delay: 0.2s;">
                    <div class="position-relative">
                        <img src="~/images/Koltuklar/Sude.png" alt="INZA HOME Atölye"
                             class="img-fluid rounded-4" style="box-shadow: 0 20px 60px rgba(0,0,0,0.1);">
                        <div class="position-absolute bottom-0 start-0 p-4">
                            <div class="bg-white rounded-3 p-3 shadow-sm" style="backdrop-filter: blur(10px); background: rgba(255,255,255,0.95);">
                                <small class="text-muted d-block mb-1">1998'den beri</small>
                                <div class="fw-semibold text-brown">Kalite ve zarafet</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
