@model List<Inza_Home.Models.CollectionVm>
@{
    Layout = "_Layout";
    ViewData["Title"] = @HelperFunctions.Translate("Koleksiyonlar");
}

<div class="collections-header">
    <div class="container">
    </div>
</div>

<div class="collections-container">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="collections-grid">
                @foreach (var item in Model)
                {
                    <div class="collection-item">
                        <a href="@Url.Action("CollectionDetail", "Home", new { id = item.Id })" class="collection-link">
                            <div class="collection-card">
                                <div class="image-container">
                                    <img src="@item.CoverImage" alt="@item.Name" class="collection-image" />
                                    <div class="overlay-content">                        
                                        <span class="view-button">@HelperFunctions.Translate("Koleksiyonu İncele")</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-collections">
                <p>@HelperFunctions.Translate("Henüz koleksiyon bulunmamaktadır.")</p>
            </div>
        }
    </div>
</div>

<style>
    /* Sadece Başlık */
    .collections-header {
        padding: 50px 0 50px;
        margin-bottom: 60px;
    }

    .collections-title {
        font-size: 2rem;
        font-weight: 600;
        color: #8e8779;
        margin: 0;
        text-align: left;
        letter-spacing: -0.02em;
    }

    /* GRID */
    .collections-container .container {
        max-width: 1760px;
    }

    .collections-container {
        padding-bottom: 80px;
    }

    .collections-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(420px, 1fr));
        gap: 36px;
        margin: 0 auto;
    }

    /* Kart */
    .collection-card {
        background: #fdfcfa;
        border-radius: 0;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(139,115,85,.15);
        transition: all .4s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .collection-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(139,115,85,.25);
        }

    .image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        background: #f6f2ec;
    }

    .collection-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        display: block;
    }

    .collection-card:hover .collection-image {
        transform: scale(1.1);
    }

    /* Overlay İçeriği (Yeni) */
    .overlay-content {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
        opacity: 0;
        transition: opacity 0.4s ease;
        text-align: center;
    }

    .collection-card:hover .overlay-content {
        opacity: 1;
    }

    .collection-name-overlay {
        color: #fff;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
        transform: translateY(-10px);
        transition: transform 0.4s ease;
    }

    .collection-card:hover .collection-name-overlay {
        transform: translateY(0);
    }

    .view-button {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 8px 16px;
        border: 1px solid #fff;
        color: #fff;
        background-color: #78706482;
        display: inline-block;
        transition: all 0.3s ease;
        transform: translateY(10px);
    }

    .collection-card:hover .view-button {
        transform: translateY(0);
    }

    .view-button:hover {
        background: #ddd3d3;
        color: #8b7355;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .collections-grid {
            grid-template-columns: repeat(2, minmax(250px, 1fr));
            gap: 28px;
        }
    }

    @@media (max-width: 576px) {
        .collections-grid {
            grid-template-columns: 1fr;
            gap: 22px;
            padding: 0 15px;
        }

        .collections-title {
            font-size: 1.6rem;
        }
    }
</style>