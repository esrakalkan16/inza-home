@model List<Inza_Home.Controllers.HomeController.CollectionModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = @HelperFunctions.Translate("Koleksiyonlar");
}

<div class="collections-header">
    <div class="container">
    </div>
</div>

<div class="collections-container">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="collections-grid">
                @foreach (var item in Model)
                {
                    <div class="collection-item">
                        <a href="@Url.Action("CollectionDetail", "Home", new { id = item.Id })" class="collection-link">
                            <div class="collection-card">
                                <div class="image-container">
                                    <img src="@item.CoverImage" alt="@item.Name" class="collection-image" />
                                    <div class="image-overlay">
                                        <div class="overlay-content">
                                            <h3 class="collection-name-overlay">@item.Name</h3>
                                            <span class="view-text">@HelperFunctions.Translate("Koleksiyonu İncele")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-collections">
                <p>@HelperFunctions.Translate("Henüz koleksiyon bulunmamaktadır.")</p>
            </div>
        }
    </div>
</div>

<style>
    /* Sadece Başlık */
    .collections-header {
        padding: 50px 0 50px;
        border-bottom: 1px solid rgba(142, 135, 121, 0.3);
        margin-bottom: 60px;
    }

    .collections-title {
        font-size: 2rem;
        font-weight: 600;
        color: #8e8779;
        margin: 0;
        text-align: left; /* solda */
        letter-spacing: -0.02em;
    }

    /* GRID */
    .collections-container .container {
        max-width: 1760px;
    }

    .collections-container {
        padding-bottom: 80px;
    }

    .collections-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(420px, 1fr));
        gap: 36px;
        margin: 0 auto;
    }

    /* Kart */
    .collection-card {
        background: #fdfcfa;
        border-radius: 0;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(139,115,85,.15);
        transition: all .4s ease;
        height: 100%;
    }

        .collection-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(139,115,85,.25);
        }

    .image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        background: #f6f2ec;
    }

    .collection-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform .6s ease;
        display: block;
    }

    .collection-card:hover .collection-image {
        transform: scale(1.03);
    }

    /* Overlay */
    .image-overlay {
        position: absolute;
        inset: 0;
        background: rgba(139,115,85,.85);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity .4s ease;
    }

    .collection-card:hover .image-overlay {
        opacity: 1;
    }

    .overlay-content {
        text-align: center;
        color: #fdfcfa;
    }

    .view-text {
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px 24px;
        border: 2px solid #fdfcfa;
        display: inline-block;
        transition: all .3s ease;
    }

        .view-text:hover {
            background: #fdfcfa;
            color: #8b7355;
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .collections-grid

    {
        grid-template-columns: repeat(2, minmax(250px,1fr));
        gap: 28px;
    }

    }
    @@media (max-width: 576px) {
        .collections-grid

    {
        grid-template-columns: 1fr;
        gap: 22px;
        padding: 0 15px;
    }

    .collections-title {
        font-size: 1.6rem;
    }

    }
</style>
