@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-section">
    <div class="container">
        <div class="row g-5" style="margin-top:40px">
            <!-- İletişim Bilgileri -->
            <div class="col-lg-5" >
                <div class="info-card">
                    <h3 class="card-title">@HelperFunctions.Translate("İletişim Bilgilerimiz")</h3>

                    <div class="info-item">
                        <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
                        <div>
                            <h5>@HelperFunctions.Translate("Adres")</h5>
                            <p>Vakıf Mah. Vakıfköy Cad. No:98/6<br>Yıldırım / BURSA</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon"><i class="fas fa-phone"></i></div>
                        <div>
                            <h5>@HelperFunctions.Translate("Telefon")</h5>
                            <p>0533 792 48 60<br>@HelperFunctions.Translate("Pazartesi - Cumartesi, 09:00 - 18:00")</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon"><i class="fas fa-envelope"></i></div>
                        <div>
                            <h5>@HelperFunctions.Translate("E-Posta")</h5>
                            <p>info@inzahome.com<br>@HelperFunctions.Translate("24 saat içinde yanıtlıyoruz")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="col-lg-7">
                <div class="info-card">
                    <h3 class="card-title">@HelperFunctions.Translate("Bize Yazın")</h3>
                    <form action="@Url.Action("ContactForm","Home")" method="post" class="contact-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">@HelperFunctions.Translate("Ad Soyad") *</label>
                                <input type="text" name="FullName" class="form-input" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@HelperFunctions.Translate("Telefon") *</label>
                                <input type="tel" name="Phone" class="form-input" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">@HelperFunctions.Translate("E-Mail Adresiniz") *</label>
                                <input type="email" name="Email" class="form-input" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">@HelperFunctions.Translate("Mesajınız") *</label>
                                <textarea name="Message" rows="5" class="form-textarea" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="submit-btn">@HelperFunctions.Translate("Gönder")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Harita -->
        <div class="map-section mt-5">
            <iframe class="map-frame"
                    src="https://www.google.com/maps?q=Vakıf+Mahallesi+Vakıfköy+Cad.+No:98/6,+Yıldırım,+Bursa,+Türkiye&output=embed&z=17"
                    allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</section>

<style>
    .contact-section {
        padding: 80px 11px;
    }

    .info-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        padding: 30px;
    }

    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.6rem;
        color: #8e8779;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .info-icon {
        width: 50px;
        height: 50px;
        background: #8e8779;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .info-item h5 {
        margin: 0 0 5px;
        font-size: 1.05rem;
        font-weight: 600;
        color: #333;
    }

    .info-item p {
        margin: 0;
        font-size: 0.95rem;
        color: #555;
        line-height: 1.5;
    }

    /* Form */
    .form-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #333;
        margin-bottom: 6px;
    }

    .form-input, .form-textarea {
        width: 100%;
        padding: 12px 14px;
        border: 1px solid #ddd;
        border-radius: 6px;
        background: #fafafa;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-input:focus, .form-textarea:focus {
            border-color: #8e8779;
            background: #fff;
            box-shadow: 0 0 0 3px rgba(142, 135, 121, 0.15);
            outline: none;
        }

    .submit-btn {
        width: 100%;
        background: #8e8779;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 14px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .submit-btn:hover {
            background: #6b5642;
            transform: translateY(-2px);
        }

    /* Harita */
    .map-section {
        height: 350px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }

    .map-frame {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
