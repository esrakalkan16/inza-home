@{
    ViewData["Title"] = "İletişim";
}

<style>
    :root {
        --primary-brown: #8B7355;
        --light-brown: #A68B5B;
        --dark-brown: #6B5642;
        --cream: #F8F6F3;
        --dark-text: #2A2A2A;
        --light-gray: #F5F5F5;
        --soft-beige: #F9F7F4;
    }

    /* Contact Content */
    .contact-content {
        padding: 60px 0;
        background: white;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: start;
        margin-bottom: 60px;
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        color: var(--primary-brown);
        margin-bottom: 2rem;
        font-weight: 500;
    }

    .section-subtitle {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 3rem;
        line-height: 1.7;
    }

    /* Contact Info Card - Single Card */
    .contact-info-card {
        background: var(--soft-beige);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(139, 115, 85, 0.1);
        border: 1px solid rgba(139, 115, 85, 0.08);
    }

    .info-section {
        margin-bottom: 35px;
        padding-bottom: 30px;
        border-bottom: 1px solid rgba(139, 115, 85, 0.15);
    }

        .info-section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .info-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
    }

    .info-icon {
        width: 45px;
        height: 45px;
        background: var(--primary-brown);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 18px;
    }

    .info-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--dark-text);
        font-family: 'Playfair Display', serif;
    }

    .info-details {
        margin-left: 60px;
        color: #666;
        line-height: 1.6;
    }

        .info-details strong {
            color: var(--dark-text);
            display: block;
            margin-bottom: 5px;
        }

    .info-link {
        color: var(--primary-brown);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .info-link:hover {
            color: var(--dark-brown);
        }

    /* Map Section */
    .map-section {
        background: var(--light-gray);
        padding: 0;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .map-container {
        position: relative;
        height: 450px;
    }

    .map-frame {
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 15px;
    }

    .map-overlay {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        max-width: 280px;
    }

        .map-overlay h4 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-brown);
            font-size: 1.2rem;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .map-overlay p {
            color: #666;
            font-size: 0.9rem;
            line-height: 1.4;
            margin-bottom: 5px;
        }

    /* Form Styles */
    .form-section {
        grid-column: 1 / -1;
        margin-top: 40px;
    }

    .modern-form {
        background: var(--soft-beige);
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 15px 40px rgba(139, 115, 85, 0.08);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 2rem;
        position: relative;
    }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

    .form-input, .form-textarea, .form-select {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid rgba(139, 115, 85, 0.1);
        border-radius: 8px;
        font-size: 16px;
        font-family: 'Inter', sans-serif;
        background: white;
        transition: all 0.3s ease;
        resize: vertical;
    }

        .form-input:focus, .form-textarea:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary-brown);
            box-shadow: 0 0 0 3px rgba(139, 115, 85, 0.1);
        }

    .form-label {
        display: block;
        margin-bottom: 8px;
        color: var(--dark-text);
        font-weight: 500;
        font-size: 15px;
    }

    .submit-btn {
        width: 100%;
        background: var(--primary-brown);
        color: white;
        padding: 15px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .submit-btn:hover {
            background: var(--dark-brown);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(139, 115, 85, 0.3);
        }

    /* Animations */
    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s ease;
    }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .contact-grid

    {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .form-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .modern-form {
        padding: 35px 25px;
    }

    }

    @@media (max-width: 768px) {
        .contact-content

    {
        padding: 40px 0;
    }

    .modern-form {
        padding: 30px 20px;
    }

    .contact-info-card {
        padding: 30px 25px;
    }

    .info-details {
        margin-left: 0;
        margin-top: 15px;
    }

    .info-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .map-container {
        height: 350px;
    }

    .map-overlay {
        position: relative;
        margin: 15px;
        max-width: none;
    }

    }
</style>

