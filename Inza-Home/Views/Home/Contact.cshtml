@{
    ViewData["Title"] = "İletişim";
}

<!-- Hero Section -->
<section class="contact-hero">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">@HelperFunctions.Translate("İletişim")</h1>
            <p class="hero-subtitle">
                @HelperFunctions.Translate("25 yıllık tecrübemizle koltuk, kanepe ve oturma grupları konusunda size en iyi hizmeti sunmak için buradayız. Bizimle iletişime geçin.")
            </p>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="contact-content">
    <div class="container">

        <!-- Contact Info Block -->
        <div class="contact-block fade-up">
            <div class="info-content">
                <div class="info-text">
                    <h2>@HelperFunctions.Translate("Bizimle İletişime Geçin")</h2>
                    <p>
                        @HelperFunctions.Translate("Bursa Yıldırım'da bulunan showroomumuzda ürünlerimizi yakından inceleyebilir, uzman ekibimizden detaylı bilgi alabilirsiniz. Size en uygun çözümü bulmak için buradayız.")
                    </p>
                </div>

                <div class="contact-details">
                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="detail-content">
                            <h4>@HelperFunctions.Translate("Telefon")</h4>
                            <p><a href="tel:+905337924860" class="detail-link">0533 792 48 60</a></p>
                            <p>@HelperFunctions.Translate("Pazartesi - Cumartesi, 09:00 - 18:00")</p>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="detail-content">
                            <h4>@HelperFunctions.Translate("E-posta")</h4>
                            <p><a href="mailto:info@inzahome.com" class="detail-link">info@inzahome.com</a></p>
                            <p>@HelperFunctions.Translate("24 saat içinde yanıtlıyoruz")</p>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="detail-content">
                            <h4>@HelperFunctions.Translate("Showroom Adresimiz")</h4>
                            <p>Vakıf Mah. Vakıfköy Cad. No:38/6<br>Yıldırım/BURSA</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Block -->
        <div class="contact-block fade-up">
            <div class="form-block">
                <div class="form-content">
                    <h2 class="form-title">@HelperFunctions.Translate("Bize Yazın")</h2>
                    <p class="form-subtitle">
                        @HelperFunctions.Translate("Merak ettiklerinizi, özel tasarım taleplerinizi veya showroom randevunuzu aşağıdaki formu doldurarak iletebilirsiniz.")
                    </p>

                    <form class="contact-form" action="@Url.Action("ContactForm","Home")" method="post">
                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">@HelperFunctions.Translate("Ad Soyad") *</label>
                                <input type="text" name="FullName" class="form-input" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label">@HelperFunctions.Translate("Telefon") *</label>
                                <input type="tel" name="Phone" class="form-input" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@HelperFunctions.Translate("E-posta Adresi") *</label>
                            <input type="email" name="Email" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@HelperFunctions.Translate("İlgilendiğiniz Ürün")</label>
                            <select name="ProductType" class="form-select">
                                <option value="">@HelperFunctions.Translate("Seçiniz...")</option>
                                <option value="gonca">@HelperFunctions.Translate("Gonca Koleksiyonu")</option>
                                <option value="beren">@HelperFunctions.Translate("Beren Koleksiyonu")</option>
                                <option value="sude">@HelperFunctions.Translate("Sude Koleksiyonu")</option>
                                <option value="ozel-tasarim">@HelperFunctions.Translate("Özel Tasarım")</option>
                                <option value="diger">@HelperFunctions.Translate("Diğer")</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">@HelperFunctions.Translate("Mesajınız") *</label>
                            <textarea name="Message" class="form-textarea" rows="5" placeholder="@HelperFunctions.Translate("Lütfen ihtiyaçlarınızı detaylı bir şekilde belirtiniz...")" required></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn-brown">
                                @HelperFunctions.Translate("Mesaj Gönder")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="contact-block fade-up">
            <div class="info-content">
                <div class="info-text">
                    <h2>@HelperFunctions.Translate("Showroomumuz")</h2>
                    <p>
                        @HelperFunctions.Translate("Bursa Yıldırım'da bulunan showroomumuzda koleksiyonlarımızı keşfedin. Uzman ekibimiz size en uygun çözümü bulmanızda yardımcı olacak.")
                    </p>
                </div>

                <div class="map-section">
                    <div class="map-container">
                        <iframe class="map-frame"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3048.123!2d29.123!3d40.123!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2sVak%C4%B1f%20Mah.%20Vak%C4%B1fk%C3%B6y%20Cad.%20No%3A38%2F6%20Y%C4%B1ld%C4%B1r%C4%B1m%2FBURSA!5e0!3m2!1str!2str!4v1640000000000"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        // Index sayfasındaki fade-up animasyonu
        document.addEventListener("DOMContentLoaded", () => {
            const blocks = document.querySelectorAll(".fade-up");
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("visible");
                    }
                });
            }, { threshold: 0.2 });
            blocks.forEach(block => observer.observe(block));
        });

        // Form submission handling
        document.querySelector('.contact-form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-brown');
            const originalText = submitBtn.textContent;

            submitBtn.textContent = '@HelperFunctions.Translate("Gönderiliyor...")';
            submitBtn.disabled = true;
            submitBtn.style.opacity = '0.7';
        });
    </script>
}