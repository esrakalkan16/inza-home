@{
    Layout = null;
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
    var LANG = SessionHelper.GetSessionValue("LANG") ?? "TR";
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Inza Home</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullpage.js@4/dist/fullpage.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/ScrollTrigger.min.js"></script>
    <script src="https://unpkg.com/three@0.160.0/build/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullpage.js@4/dist/fullpage.min.js"></script>

    <script src="~/js/splittext-init.js"></script>
</head>
<body>

    @if (ViewBag.HideSiteMap != true)
    {
        <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
            <div class="container">
                <a class="navbar-brand fw-semibold" href="/">INZA HOME</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Menüyü Aç">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index","Home")" onclick="setActive(this)">
                                @HelperFunctions.Translate("Anasayfa")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Collections","Home")" onclick="setActive(this)">
                                @HelperFunctions.Translate("Koleksiyonlar")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AboutUs","Home")" onclick="setActive(this)">
                                @HelperFunctions.Translate("Hakkımızda")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact","Home")" onclick="setActive(this)">
                                @HelperFunctions.Translate("İletişim")
                            </a>
                        </li>

                        <!-- Dil Değiştirme artık aynı ul içinde -->
                        <li class="nav-item dropdown">
                            <button class="btn btn-link nav-link dropdown-toggle d-flex align-items-center text-decoration-none border-0 bg-transparent p-1"
                                    type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">

                                @if (LANG == "TR")
                                {
                                    <svg class="flag-icon me-2" width="20" height="14" viewBox="0 0 20 14">
                                        <rect width="20" height="14" fill="#E30A17" />
                                        <circle cx="8" cy="7" r="3" fill="white" />
                                        <circle cx="9" cy="7" r="2.5" fill="#E30A17" />
                                        <polygon points="12,5 13.5,6.5 12,8 12.8,6.5" fill="white" />
                                    </svg>
                                    <span>TR</span>
                                }
                                else
                                {
                                    <svg class="flag-icon me-2" width="20" height="14" viewBox="0 0 20 14">
                                        <rect width="20" height="14" fill="#B22234" />
                                        <rect width="20" height="1" y="1" fill="white" />
                                        <rect width="20" height="1" y="3" fill="white" />
                                        <rect width="20" height="1" y="5" fill="white" />
                                        <rect width="20" height="1" y="7" fill="white" />
                                        <rect width="20" height="1" y="9" fill="white" />
                                        <rect width="20" height="1" y="11" fill="white" />
                                        <rect width="20" height="1" y="13" fill="white" />
                                        <rect width="8" height="7" fill="#3C3B6E" />
                                    </svg>
                                    <span>EN</span>
                                }
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end language-dropdown" aria-labelledby="languageDropdown">
                                <li>
                                    <button class="dropdown-item d-flex align-items-center" onclick="ChangeLanguages('TR')">
                                        <svg class="flag-icon me-2" width="20" height="14" viewBox="0 0 20 14">
                                            <rect width="20" height="14" fill="#E30A17" />
                                            <circle cx="8" cy="7" r="3" fill="white" />
                                            <circle cx="9" cy="7" r="2.5" fill="#E30A17" />
                                            <polygon points="12,5 13.5,6.5 12,8 12.8,6.5" fill="white" />
                                        </svg>
                                        <span>Turkish</span>
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item d-flex align-items-center" onclick="ChangeLanguages('EN')">
                                        <svg class="flag-icon me-2" width="20" height="14" viewBox="0 0 20 14">
                                            <rect width="20" height="14" fill="#B22234" />
                                            <rect width="20" height="1" y="1" fill="white" />
                                            <rect width="20" height="1" y="3" fill="white" />
                                            <rect width="20" height="1" y="5" fill="white" />
                                            <rect width="20" height="1" y="7" fill="white" />
                                            <rect width="20" height="1" y="9" fill="white" />
                                            <rect width="20" height="1" y="11" fill="white" />
                                            <rect width="20" height="1" y="13" fill="white" />
                                            <rect width="8" height="7" fill="#3C3B6E" />
                                        </svg>
                                        <span>English</span>
                                    </button>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }



    <main class="py-0" style="background-color:#f1f1f1">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-top-line"></div>

        <div class="footer-main">
            <div class="container">
                <div class="footer-grid">
                    <!-- Company Section -->
                    <div class="company-section">
                        <div class="company-logo">İNZA HOME FURNITURE</div>
                        <div class="company-tagline">@HelperFunctions.Translate("Koltuk Kanepe Oturma Grupları")</div>
                        <p class="company-description">@HelperFunctions.Translate("Sade ve zamansız tasarımlarıyla evinizin konforunu artıran premium koltuk ve kanepe koleksiyonları. Kaliteli işçilik ve estetik tasarımın buluştuğu özel üretimler.")</p>
                    </div>

                    <!-- Site Navigation -->
                    <div class="nav-section">
                        <h4 class="section-header">@HelperFunctions.Translate("Keşfet")</h4>
                        <ul class="nav-links">
                            <li><a class="text-white-75 text-decoration-none" href="@Url.Action("Index","Home")">@HelperFunctions.Translate("Anasayfa")</a></li>
                            <li><a class="text-white-75 text-decoration-none" href="@Url.Action("Collections","Home")">@HelperFunctions.Translate("Koleksiyonlar")</a></li>
                            <li><a class="text-white-75 text-decoration-none" href="@Url.Action("AboutUs","Home")">@HelperFunctions.Translate("Hakkımızda")</a></li>
                            <li><a class="text-white-75 text-decoration-none" href="@Url.Action("Contact","Home")">@HelperFunctions.Translate("İletişim")</a></li>
                        </ul>
                    </div>

                    <!-- Contact Section -->
                    <div class="nav-section">
                        <h4 class="section-header">@HelperFunctions.Translate("İletişim")</h4>
                        <div class="contact-section2">
                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="contact-content">
                                    <h4>@HelperFunctions.Translate("Adres")</h4>
                                    <p>Vakıf Mah. Vakıfköy Cad. No:38/6<br>Yıldırım/BURSA</p>
                                </div>
                            </div>

                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fab fa-whatsapp"></i>
                                </div>
                                <div class="contact-content">
                                    <h4>WhatsApp</h4>
                                    <a href="https://wa.me/906037924586">0533 792 48 60</a>
                                </div>
                            </div>

                            <div class="contact-item">
                                <div class="contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="contact-content">
                                    <h4>@HelperFunctions.Translate("E-posta")</h4>
                                    <a href="mailto:info@inzahome.com">info@inzahome.com</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sosyal Medya En Altta Ortada -->
                <div class="social-section">
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="WhatsApp">
                            <i class="fab fa-whatsapp"></i>
                        </a>   
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="footer-bottom-content">
                    <div class="copyright">
                        @HelperFunctions.Translate("© 2025 İnza Home Furniture. Tüm hakları saklıdır.")
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        // Scroll efekti
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Aktif link işaretleme
        function setActive(element) {
            // Tüm nav-link'lerden active class'ını kaldır
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            // Tıklanan link'e active class'ını ekle
            element.classList.add('active');
        }

        function ChangeLanguages(LANG){
            location.href = '/Home/ChangeLanguages?LANG='+LANG;
        }
    </script>

</body>
</html>
