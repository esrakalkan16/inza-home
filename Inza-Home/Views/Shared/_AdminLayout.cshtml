@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/admin/css/app.min.css" />
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/admin/css/style.css" />
    <link rel="stylesheet" href="~/admin/css/components.css" />
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/admin/css/custom.css" />
    <link rel="shortcut icon" href="~/admin/img/favicon.ico" />
</head>
<body>
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>

            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg main-navbar sticky">
                <a class="navbar-brand" href="/Admin">
                    <img src="~/admin/img/logo.png" alt="logo" style="height:35px;" />
                    <span class="ml-2">Inza Home Admin</span>
                </a>

                <ul class="navbar-nav navbar-right ml-auto">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown"
                           class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <img alt="image" src="~/admin/img/user.png" class="rounded-circle mr-1" />
                            <div class="d-sm-none d-lg-inline-block">Admin</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right pullDown">
                            <div class="dropdown-title">Hoşgeldin, Admin</div>
                            <a href="/Admin/Profile" class="dropdown-item has-icon">
                                <i class="far fa-user"></i> Profil
                            </a>
                            <a href="/Admin/Settings" class="dropdown-item has-icon">
                                <i class="fas fa-cog"></i> Ayarlar
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/Auth/Logout" class="dropdown-item has-icon text-danger">
                                <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Sidebar -->
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="/Admin">
                            <img alt="image" src="~/admin/img/logo.png" class="header-logo" />
                            <span class="logo-name">Admin</span>
                        </a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Main</li>
                        <li class="active">
                            <a class="nav-link" href="/Admin">
                                <i data-feather="monitor"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Admin/Slider">
                                <i data-feather="sliders"></i> <span>Slider Yönetimi</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Admin/Collections">
                                <i data-feather="grid"></i> <span>Koleksiyonlar</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Admin/Cards">
                                <i data-feather="layers"></i> <span>Koleksiyon Kartları</span>
                            </a>
                        </li>
                    </ul>

                    <!-- Sidebar Profil -->
                    <div class="p-3 mt-5 text-center border-top">
                        <img src="~/admin/img/user.png" class="rounded-circle mb-2" style="width:60px;" />
                        <h6 class="mb-0">Admin Kullanıcı</h6>
                        <a href="/Auth/Logout" class="btn btn-sm btn-danger mt-2">
                            <i class="fas fa-sign-out-alt"></i> Çıkış
                        </a>
                    </div>
                </aside>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    @RenderBody()
                </section>
            </div>

            <!-- Footer -->
            <footer class="main-footer">
                <div class="footer-left">
                    © @DateTime.Now.Year - Inza Home Admin
                </div>
                <div class="footer-right"></div>
            </footer>
        </div>
    </div>

    <!-- General JS Scripts -->
    <script src="~/admin/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/admin/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Template JS File -->
    <script src="~/admin/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/admin/js/custom.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
